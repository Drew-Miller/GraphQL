{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2018",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}